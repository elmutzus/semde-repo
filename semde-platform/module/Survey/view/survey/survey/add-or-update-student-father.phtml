        } else {
            $("[name='chronicDisease']").removeAttr("readonly");
        }
    }
    
    function validateHasLearningIllness() {
        if ($("[name='hasLearningIllness']").val() == '0') {
            $("[name='learningIllness']").attr("readonly", "true");
        } else {
            $("[name='learningIllness']").removeAttr("readonly");
        }
    }
    
    $(document).ready(function () {
        validateHasChronicDisease();
        validateHasLearningIllness();
    });

    $(function () {
        $("[name='hasChronicDisease']").change(function () {
            validateHasChronicDisease();
        });
        $("[name='hasLearningIllness']").change(function () {
            validateHasLearningIllness();
        });
    });
</script>
